{
  "name": "levelup-gamer-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://RichardMoreano.github.io/LevelUpGamer_FullStack",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -r https://github.com/RichardMoreano/LevelUpGamer_FullStack.git -t",
    "deploy:clean": "gh-pages-clean && npm run deploy",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage",
    "test:karma": "cross-env NODE_OPTIONS=--no-deprecation karma start karma.conf.cjs",
    "test:watch": "cross-env NODE_OPTIONS=--no-deprecation karma start karma.conf.cjs --auto-watch --no-single-run"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jasmine-dom": "^1.3.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "http-proxy": "^1.18.1",
    "jasmine-core": "^5.12.0",
    "jsdom": "^27.0.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-esbuild": "^2.3.0",
    "karma-jasmine": "^5.1.0",
    "puppeteer": "^24.25.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "gh-pages": "^6.1.1"
  }
}
